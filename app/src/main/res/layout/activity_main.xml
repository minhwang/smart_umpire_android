<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hwang.min81.smartumpire.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ball :"
        android:id="@+id/txtBall"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Strike :"
        android:layout_below="@+id/txtBall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Out :"
        android:id="@+id/txtOut"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtBallCount"
        android:layout_alignTop="@+id/txtBall"
        android:layout_toRightOf="@+id/txtOut"
        android:layout_toEndOf="@+id/txtOut"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtStrikeCount"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtOutCount"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtOut"
        android:layout_toEndOf="@+id/txtOut"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Ball"
        android:id="@+id/buttonAddBall"
        android:onClick="onClickAddBall"
        android:layout_alignBottom="@+id/txtBallCount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Strike"
        android:id="@+id/buttonAddStrike"
        android:onClick="onClickAddStrike"
        android:layout_alignBottom="@+id/txtStrikeCount"
        android:layout_alignLeft="@+id/buttonAddBall"
        android:layout_alignStart="@+id/buttonAddBall" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Out"
        android:id="@+id/buttonAddOut"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonAddBall"
        android:layout_alignStart="@+id/buttonAddBall"
        android:onClick="onClickAddOut" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonAddOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="4"
        android:rowCount="3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ball"
            android:id="@+id/button_action_ball"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClickAction" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strike"
            android:id="@+id/button_action_strike"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onClickAction"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hit"
            android:id="@+id/button_action_hit"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onClickAction"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk"
            android:id="@+id/button_action_walk"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onClickAction"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batter Out"
            android:id="@+id/button_action_batter_out"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onClickAction"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runner Out"
            android:id="@+id/button_action_runner_out"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onClickAction"/>
    </GridLayout>
</RelativeLayout>
